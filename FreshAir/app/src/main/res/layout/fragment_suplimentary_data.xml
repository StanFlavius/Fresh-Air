<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/suplimentary_data_background"
    tools:context=".Functionalities.SuplimentaryData.SuplimentaryDataFragment">

    <TextView
        android:id="@+id/textViewFillForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arsenal_bold"
        android:text="FILL THE FORM"
        android:textColor="@color/colorBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRecieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arsenal_bold"
        android:text="TO RECEIVE YOUR DEVICE"
        android:textColor="@color/colorBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFillForm" />

    <EditText
        android:id="@+id/firstNameForm"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/complete_form_model"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="    First Name"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewRecieve" />

    <EditText
        android:id="@+id/lastNameForm"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/complete_form_model"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="    Last Name"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameForm" />

    <EditText
        android:id="@+id/internetProviderNameForm"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/complete_form_model"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="    Internet Provider Name"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameForm" />

    <EditText
        android:id="@+id/internetProviderPasswordForm"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/complete_form_model"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="    Internet Provider Password"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/internetProviderNameForm" />

    <EditText
        android:id="@+id/addressForm"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/complete_form_model"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="    Address"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/internetProviderPasswordForm" />

    <EditText
        android:id="@+id/phoneNumberForm"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/complete_form_model"
        android:drawableLeft="@drawable/ic_user"
        android:ems="10"
        android:hint="    Phone Number"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressForm" />
    <Button
        android:id="@+id/buttonToSend"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_button_1"
        android:fontFamily="@font/arsenal_bold"
        android:text="Send"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberForm" />

    <TextView
        android:id="@+id/textViewAlreadyCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/bevan"
        android:text="If you have already completed the form"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberForm" />

    <TextView
        android:id="@+id/textViewClickCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bevan"
        android:text="Click here to log in"
        android:textColor="@color/purple_500"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlreadyCompleted" />

</androidx.constraintlayout.widget.ConstraintLayout>