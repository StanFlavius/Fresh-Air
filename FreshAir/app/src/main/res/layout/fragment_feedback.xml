<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFunc"
    tools:context=".Functionalities.Feedback.FeedbackFragment">

    <ImageButton
        android:id="@+id/buttonFeedbackToHome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/arsenal_bold"
        android:text="Feedback"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/buttonFeedbackToHome"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textViewTO"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:background="@drawable/advice_root_spaces"
        android:fontFamily="@font/arsenal_bold"
        android:inputType="textPersonName"
        android:ems="10"
        android:text="flaviusstefanstan20@gmail.com "
        android:paddingLeft="15dp"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <EditText
        android:id="@+id/textViewTitleEmail"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:background="@drawable/advice_root_spaces"
        android:fontFamily="@font/arsenal_bold"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Title: "
        android:paddingLeft="15dp"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTO" />

    <EditText
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="250dp"
        android:background="@drawable/advice_root_spaces"
        android:fontFamily="@font/arsenal_bold"
        android:hint="Content: "
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:textSize="25dp"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleEmail" />

    <Button
        android:id="@+id/buttonSendEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/advice_root_spaces"
        android:text="Send"
        android:fontFamily="@font/arsenal_bold"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewContent" />

</androidx.constraintlayout.widget.ConstraintLayout>