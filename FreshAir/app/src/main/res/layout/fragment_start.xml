<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_start_screen"
    tools:context=".Functionalities.StartScreen.StartFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/logInButton"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_button_1"
        android:fontFamily="@font/arsenal_bold"
        android:text="Log In"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTogether" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/custom_button_1"
        android:fontFamily="@font/arsenal_bold"
        android:text="Register"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logInButton" />

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="WELCOME TO FRESH AIR"
        android:textColor="@color/colorBackground"
        android:fontFamily="@font/arsenal_bold"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDesciption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/arsenal_bold"
        android:text="LET'S MAKE THE EARTH"
        android:textColor="@color/colorBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcome" />

    <TextView
        android:id="@+id/textViewDesciption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arsenal_bold"
        android:text="A BETTER PLACE!"
        android:textColor="@color/colorBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDesciption1" />

    <TextView
        android:id="@+id/textViewTogether"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/arsenal_bold"
        android:text="TOGETHER WE CAN!"
        android:textColor="@color/colorBackground"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDesciption2" />

</androidx.constraintlayout.widget.ConstraintLayout>