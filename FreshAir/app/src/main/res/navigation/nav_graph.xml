<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.freshair.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_startFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_startFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_startFragment_to_airPollutionNewsFragment"
            app:destination="@id/airPollutionNewsFragment" />
        <action
            android:id="@+id/action_startFragment_to_deviceFragment"
            app:destination="@id/deviceFragment" />
        <action
            android:id="@+id/action_startFragment_to_addPostFragment"
            app:destination="@id/addPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.freshair.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in" >
        <action
            android:id="@+id/action_logInFragment_to_startFragment"
            app:destination="@id/startFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.freshair.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.freshair.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" />
    <fragment
        android:id="@+id/airPollutionNewsFragment"
        android:name="com.example.freshair.AirPollutionNews.AirPollutionNewsFragment"
        android:label="fragment_air_pollution_news"
        tools:layout="@layout/fragment_air_pollution_news" />
    <fragment
        android:id="@+id/deviceFragment"
        android:name="com.example.freshair.Device.DeviceFragment"
        android:label="fragment_device"
        tools:layout="@layout/fragment_device" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.freshair.AirPollutionBlog.AddPostFragment"
        android:label="fragment_add_post"
        tools:layout="@layout/fragment_add_post" />
</navigation>